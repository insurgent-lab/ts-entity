{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2017",
    "lib": ["es2017"],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*"
  ]
}
